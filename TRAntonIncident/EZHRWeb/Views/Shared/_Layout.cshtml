<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EZHR Incident Reporting</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
</head>
<body>
    <div class="navbar  navbar-fixed-top icon-bar" style="background-color: lightsteelblue ">
        <img src="~/Content/images/ezhrlogovt.gif" />
        <div class="container">
            <div class="navbar-header text-info">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
              </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-size: 25px; backcolor:white; ">
                    <li>  @Html.ActionLink("EZHR_Incident Reporting", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li> <a href="https://www.ezhrvt.com/">EZHR Video Training </a>
                    </li>
                    </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - EZHR_Incident Reporting</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
